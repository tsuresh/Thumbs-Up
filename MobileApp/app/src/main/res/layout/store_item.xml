<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/storeimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:layout_marginRight="8dp"/>


            <TextView
                android:text="SURESH PEIRIS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storename"
                android:textStyle="normal|bold"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/storeimg"
                android:layout_toEndOf="@+id/storeimg" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/storerate"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_below="@+id/storename"
                android:layout_toRightOf="@+id/storeimg"
                android:layout_toEndOf="@+id/storeimg" />

            <TextView
                android:text="Nice place with a really good hospitality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storelocation"
                android:textSize="10sp"
                android:layout_below="@+id/storerate"
                android:layout_toRightOf="@+id/storeimg"
                android:layout_toEndOf="@+id/storeimg" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>