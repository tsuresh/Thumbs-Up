<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="food.suresh.com.foodbrowser">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".HomeActivity" />
        <activity android:name=".DecoderActivity" />
        <activity android:name=".PointsOverlayView" />
        <activity
            android:name=".DetailPage"
            android:label="@string/title_activity_detail_page"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".RateItem" />
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Rewards"
            android:label="@string/title_activity_rewards"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>